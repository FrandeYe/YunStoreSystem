    <script>
      layui.use(['laydate', 'table'], function(){
        var laydate = layui.laydate
        ,table = layui.table;

        //执行一个laydate实例
        laydate.render({
          elem: '#start_date' //指定元素
        });

        //执行一个laydate实例
        laydate.render({
          elem: '#end_date' //指定元素
        });
        
      });


      
      notebook = {};
      
      notebook.pageNumber = 1;
      notebook.pageSize = 10;
      
      notebook.list = function(){
    	  $.ajax('/doc/notebook/list', {
        	  type: 'get',
        	  data:{pageNumber: notebook.pageNumber
        		  , pageSize: notebook.pageSize
        		  , title : $('#title').val()  
        	  },
        	  dataType: 'html',
        	  success: function(data){
        		  $('#page_list').empty();
        		  $('#page_list').html(data);
        	  }
          });
      }
      
      notebook.list();
      
      
      notebook.edit = function(id){
    	  $.ajax('/doc/notebook/editView', {
    		  type: 'get'
    		  ,data: {id: id}
    		  ,dateType : 'html'
    		  ,success: function(data){
    			  notebook.editView(data);
    		  }
    	  });
      }
      
     
      
      notebook.editView = function(data){
    	  var index = layer.open({
		        type: 1
		        ,title: ['编辑笔记']
		        ,area: ['70%', '70%']
				,id: 'notebook'
		        ,shade: 0.3
		        ,maxmin: true
		        ,anim: 1
		        ,closeBtn: true
		        ,content: data
		        ,btn: ['关闭']
		        ,yes: function(){
		        	ue.destroy();
		        	layer.close(index);
		        }
		      });
      }
      
     notebook.del = function(id){
    	 layer.confirm('确认要删除吗？',function(index){
            systemJs.ajax('/doc/notebook/delete', 'json', 'post', {id: id}, function(){
            	notebook.list();
            });
         });
     }
     
     
     notebook.read = function(id, title){
   	  $.ajax('/doc/notebook/infoView', {
   		  type: 'get'
   		  ,data: {id: id}
   		  ,dateType : 'html'
   		  ,success: function(data){
   			  notebook.readView(data, title);
   		  }
   	  });
     }
     
     
     notebook.readView = function(data, title){
   	  var index = layer.open({
		        type: 1
		        ,title: ['阅读笔记【'+title+'】']
		        ,area: ['70%', '70%']
				,id: 'read'
		        ,shade: 0.3
		        ,maxmin: true
		        ,anim: 1
		        ,closeBtn: true
		        ,content: data
		        ,btn: ['关闭']
		        ,yes: function(){
		        	layer.close(index);
		        }
		      });
     }
      
     
    </script>
